generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    String @id @default(uuid())  //@id means thats the primary key and @default(uuid()) means it will be auto-generated
  clerkUserId String @unique    //Clerk used for authentication so clerkUserId variable
  email String @unique
  name  String? 
  imageUrl String?   //? means optional 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Records Record[]    //expense records
}
model Record{
  id String @id @default(uuid())
  text String 
  amount Float
  category String @default("Other")
  date DateTime @default(now())
  userId String
  user User @relation(fields:[userId], references:[clerkUserId],onDelete:Cascade) //onDelete: Cascade means if user is deleted, all records of that user will also be deleted
  createdAt DateTime @default(now())
  @@index([userId])
}